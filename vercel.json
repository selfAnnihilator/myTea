{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/news",
      "dest": "/api/news.js"
    },
    {
      "src": "/api/news/",
      "dest": "/api/news.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}